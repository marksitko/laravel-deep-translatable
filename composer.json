{
    "name": "marksitko/laravel-deep-translatable",
    "description": "Translates automatic eloquent model attributes via DeepL",
    "keywords": [
        "marksitko",
        "laravel-deep-translatable",
        "deep-translatable",
        "automatic translation",
        "DeepL translation laravel"
    ],
    "homepage": "https://github.com/marksitko/laravel-deep-translatable",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mark Sitko",
            "email": "hey@marksitko.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0|^8.1",
        "illuminate/support": "^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "MarkSitko\\DeepTranslatable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarkSitko\\DeepTranslatable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "MarkSitko\\DeepTranslatable\\DeepTranslatableServiceProvider"
            ]
        }
    }
}
